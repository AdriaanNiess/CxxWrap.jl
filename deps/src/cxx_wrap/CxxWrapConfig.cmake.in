include(CMakeFindDependencyMacro)

set(CMAKE_MODULE_PATH ${CMAKE_CURRENT_LIST_DIR})
find_dependency(Julia)

include(CxxWrapConfigExports)

get_target_property(CXX_OLD_INCLUDES CxxWrap::cxx_wrap INTERFACE_INCLUDE_DIRECTORIES)

set_target_properties(CxxWrap::cxx_wrap PROPERTIES
  INTERFACE_INCLUDE_DIRECTORIES "${CXX_OLD_INCLUDES};${Julia_INCLUDE_DIRS}"
  INTERFACE_LINK_LIBRARIES "${Julia_LIBRARY}"
)
